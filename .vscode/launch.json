    "version": "0.2.0",
    "configurations": [
        {
            "name": "Nerdle (Run)",
            "type": "python",
            "request": "launch",
            "module": "src.nerdle",
            "args": ["run", "--answer=HUMOR", "--guess=ALIEN"]
        },
        {
            "name": "Nerdle (Solve)",
            "type": "python",
            "request": "launch",
            "module": "src.nerdle",
            "args": ["solve", "--guess=RAISE"]
        },
        {
            "name": "Nerdle (Hide)",
            "type": "python",
            "request": "launch",
            "module": "src.nerdle",
            "args": ["hide", "--guess=EXITS"]
        },
        {
            "name": "Nerdle (Benchmark)",
            "type": "python",
            "request": "launch",
            "module": "src.nerdle",
            "args": ["benchmark", "--size=5"]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}