    "version": "0.2.0",
    "configurations": [
        {
            "name": "Doddle (Run)",
            "type": "python",
            "request": "launch",
            "module": "src.doddle",
            "args": ["run", "--answer=BLISS,NEIGH,BATTY,WASTE", "--guess=CLOTH"]
        },
        {
            "name": "Doddle (Solve)",
            "type": "python",
            "request": "launch",
            "module": "src.doddle",
            "args": ["solve", "--guess=LUNAR", "--depth=1"]
        },
        {
            "name": "Doddle (Hide)",
            "type": "python",
            "request": "launch",
            "module": "src.doddle",
            "args": ["hide", "--guess=EXITS"]
        },
        {
            "name": "Doddle (Benchmark)",
            "type": "python",
            "request": "launch",
            "module": "src.doddle",
            "args": ["benchmark", "--size=5"]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}